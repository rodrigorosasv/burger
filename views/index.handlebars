<div class="container" style="background-color:burlywood;">
  <div class="row justify-content-md-center">
      <h1>Eat-da-burger!</h1>
  </div>
  <div class="row justify-content-md-center">
      <img src="../public/assets/img/burger.png"></img>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-sm" style="background-color: white; margin-right: 10px; text-align:center;">
      <h2>Burgers to be eaten!</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm" style="background-color: white; margin-left: 10px; text-align:center;">
      <h2>Burgers already eaten!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-blockDev devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row justify-content-md-center">
      <h2>Add a Burger</h2>
  </div>
  <div class="row justify-content-md-center" style="text-align: center;">
    <div class="col-12 justify-content-md-center">
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label><br>
          <input type="text" id="ca" name="burger_name">
        </div>
        <button type="submit" class="justify-content-md-center">Add Burger</button>
      </form>
    </div>
  </div>
</div>
